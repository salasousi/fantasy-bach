<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<!-- Latest compiled and minified CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Latest compiled JavaScript -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>


<body>
    <header>
        <%- include('../partials/nav.ejs') %>
    </header>

    <div class="container p-5 bg-dark text-white" style="margin-top: 10%;">
        <h1>Team: <%=currentUser.teamName%></h1>
        <hr></hr>
        <h4>Starting Lineup</h4>
        <br />

        <% if ( player.start == true ) { %>
           <% for (let i = 0; i < player.length; i++) { %>
         
        

        <img src=<%= player[i].image %> class="rounded-circle float-start" alt="Cinque Terre" width="200" height="200">
        <img src=<%= player[i].image %> class="rounded-circle" alt="Cinque Terre" width="200" height="200" style="margin-left:20%;">
        <img src=<%= player[i].image %> class="rounded-circle float-end" alt="Cinque Terre" width="200" height="200"><br />
        
        <% }} %>

    </div>

    <div class="container-fluid mt-5">
        <h1>Players: </h1>
        <hr></hr>
    </div>

    <div class="row row-cols-3">
        <% player.forEach (Player => { %>
        <div class="col" style="padding-bottom:5%;">
            <div class="card">
                <img class="card-img-top" src=<%= Player.image %> alt="Card image">
                <div class="card-body">
                  <h4 class="card-title"><%= Player.name %></h4>
                  <p class="card-text"><%= Player.age %></p>
                  <p class="card-text"><%= Player.bio %></p>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="check1" name="start" value="something" checked>
                    <label class="form-check-label">Start this Player</label>
                  </div>
                  <br />
                  <form action="/myteam/<%=Player._id%>?_method=DELETE" method="POST">
                    <input class="btn btn-danger" type="submit" value="Remove Player from Team" />
                  </form>
                
                </div>
            
            </div>
           
        </div>
        <% }) %>


</body>
</html>